@using indiGo.Core.Extensions
@model UserViewModel

<div style="padding-bottom: 13%">
    <div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-lg-4 pb-5 pr-5" style="border-right: 2px solid #007c77">
            <!-- Account Sidebar-->
            <div class="author-card pb-3">
                <div class="author-card-profile">
                    <div class="author-card-details">
                        <h2 class="author-card-name text-lg">@Model.FirstName.CapitalizeFirstLetter() @Model.LastName.CapitalizeFirstLetter()</h2><span class="author-card-position">@Model.RegisterDate.ToShortDateString() Tarihinde Katıldı</span>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <a class="list-group-item" href="#">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Profil Ayarları</div>
                            </div>
                        </div>
                    </a>
                    <a class="list-group-item" href="#">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Servis Taleplerim</div>
                            </div>
                        </div>
                    </a>
                    <a class="list-group-item" href="#">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Şifre Değiştir</div>
                            </div>
                        </div>
                    </a>


                </nav>
            </div>
        </div>
        <!-- Profile Settings-->
        <div class="col-lg-8 pb-5 pl-5">
            <form class="row" asp-controller="Account" asp-action="Profile">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input class="form-control" asp-for="FirstName" required="">
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input class="form-control" asp-for="LastName">
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" readonly="readonly">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input class="form-control" asp-for="PhoneNumber">
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <hr class="mt-2 mb-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <button class="btn btn-style-1 btn-primary" type="submit" >Profili Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
